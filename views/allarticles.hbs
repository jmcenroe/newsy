<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">

        {{#if user}}
        <h1 class='navbar-brand'>Welcome {{this.email}}</h1>
        {{else}}
        <h1 class="navbar-brand">Sign In:</h1>
        <form class="form-inline">
            <label class="sr-only" for="inlineFormInputName2">Name</label>
            <input type="text" class="form-control mb-2 mr-sm-2" id="name" placeholder="Name">
            <label class="sr-only" for="inlineFormInputGroupUsername2">Username</label>
            <div class="input-group mb-2 mr-sm-2">
                <input type="text" class="form-control" id="email" placeholder="Email">
            </div>
            <button type="submit" class="btn btn-primary mb-2" id='user'>Submit</button>
        </form>
        {{/if}}
    </div>
</nav>

<div class='container'>

    <div class='container header'>
        <h1 class='inline'>All articles: </h1>
        <form method="GET" action="/scrape">
            <button class="btn btn-primary float-right" type='submit'>Scrape New Articles</button>
        </form>
    </div>

    <div class='container'>
        <div class='row'>
            <ol>
                {{#each articles}}
                <li>
                    <a href="./article/{{this._id}}">{{this.title}}</a>
                </li>
                {{else}}
                <h2>No articles availble. Hit the Scrape New Articles button to get the latest articles</h2>
                {{/each}}
            </ol>
        </div>
    </div>
</div>